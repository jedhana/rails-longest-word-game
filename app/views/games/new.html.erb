<h1>New Game</h1>
<%=@letters  %>
<p> What is the longest word you can guess?</p>
<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="attempt">
  <input type="hidden" name="grid" value="<%= @letters.join%>">
  <input type="hidden" name="start" value="<%= Time.now %>">
  <input type="submit" value="Play">
</form>

